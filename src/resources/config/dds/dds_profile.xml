<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
<profiles>
  <participant profile_name="dds-fmu-default" >
    <domainId>0</domainId>
    <rtps>
      <name>dds-fmu</name>
    </rtps>
    <!--builtin>
      <metatrafficUnicastLocatorList/> should contain one locator with null address and null port
      <initialPeersList>
        <locator>
          <udpv4>
            <address>10.2.0.155</address>
          </udpv4>
        </locator>
      </initialPeersList>
    </builtin-->
  </participant>



  <!-- 
    Note: The profile_name="dds-fmu-default" is kept here for a reason
    Down below you will us making custom messages publish/subscriber to bind DDS with FMU with those specific topics
    However, in case of failure of atemp didn't suceed or runtime error, this profile_name="dds-fmu-default" provides us with fallback
    profile_name="dds-fmu-default" is a preprogramed DDS topic for thsi FMU, and so worst case scenario it willdefault to comuniacting between FMU and DDS with profile_name="dds-fmu-default"
  -->
  <publisher profile_name="dds-fmu-default">
    <qos>
      <durability>
        <kind>TRANSIENT_LOCAL</kind>
      </durability>
      <reliability>
        <kind>RELIABLE</kind>
      </reliability>
    </qos>
  </publisher>

  <subscriber profile_name="dds-fmu-default">
    <qos>
      <durability>
        <kind>TRANSIENT_LOCAL</kind>
      </durability>
      <reliability>
        <kind>RELIABLE</kind>
      </reliability>
    </qos>
  </subscriber>

  <!-- 
    Here we atempt to bind our custom DDS topic from the FMU
  -->

  <topic profile_name="MyCustomDDSFMUTopic" />

  <data_writer profile_name="MyCustomDDSFMUTopic">
    <qos>
      <reliability>
        <kind>RELIABLE</kind>
      </reliability>
    </qos>
  </data_writer>

  <data_reader profile_name="MyCustomDDSFMUTopic">
    <qos>
      <reliability>
        <kind>RELIABLE</kind>
      </reliability>
    </qos>
  </data_reader>



  <!-- 
    Comented the profile_name="Roundtrip" as we nowonly want to publish and subscribe to our own custom DDS topic and bind that
  -->

